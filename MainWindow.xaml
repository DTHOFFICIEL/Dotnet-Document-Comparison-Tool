<Window x:Class="ComparisonUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="文档对比器 - Document Comparison Tool" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 定义颜色 -->
        <SolidColorBrush x:Key="UnchangedBrush" Color="#E8F5E9"/>
        <SolidColorBrush x:Key="InsertedBrush" Color="#FFCDD2"/>
        <SolidColorBrush x:Key="DeletedBrush" Color="#FFCDD2"/>
        <SolidColorBrush x:Key="ModifiedBrush" Color="#FFE082"/>
        <SolidColorBrush x:Key="ImaginaryBrush" Color="#F5F5F5"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="15,10" 
                CornerRadius="5"
                Margin="0,0,0,10">
            <TextBlock Text="文档对比器" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- 控制按钮和选项 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <!-- 按钮行 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="LoadLeftButton" 
                    Content="加载左侧文档" 
                    Click="LoadLeftButton_Click"
                    Width="120" 
                    Height="35"
                    Margin="5"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="LoadRightButton" 
                    Content="加载右侧文档" 
                    Click="LoadRightButton_Click"
                    Width="120" 
                    Height="35"
                    Margin="5"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="CompareButton" 
                    Content="开始对比" 
                    Click="CompareButton_Click"
                    Width="120" 
                    Height="35"
                    Margin="5"
                    Background="#FF9800"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F57C00"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="ClearButton" 
                    Content="清除" 
                    Click="ClearButton_Click"
                    Width="120" 
                    Height="35"
                    Margin="5"
                    Background="#757575"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            </StackPanel>
            
            <!-- 对比选项行 -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                
                <CheckBox x:Name="IgnorePunctuationCheckBox"
                          Content="忽略标点符号差异（中英文逗号、句号等）"
                          FontSize="13"
                          IsChecked="False"
                          VerticalAlignment="Center"
                          Margin="10,0"/>
                
                <TextBlock Text="高亮模式："
                           FontSize="13"
                           VerticalAlignment="Center"
                           Margin="20,0,5,0"/>
                
                <ComboBox x:Name="HighlightModeComboBox"
                          Width="180"
                          Height="28"
                          FontSize="13"
                          VerticalAlignment="Center"
                          SelectedIndex="0">
                    <ComboBoxItem Content="🎯 智能高亮（推荐）"/>
                    <ComboBoxItem Content="📝 整行高亮"/>
                    <ComboBoxItem Content="✏️ 字符级高亮"/>
                </ComboBox>
                
            </StackPanel>
        </StackPanel>

        <!-- 对比区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧文档 -->
            <Border Grid.Column="0" 
                    BorderBrush="#BDBDBD" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="左侧文档" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="5"
                               Foreground="#1976D2"/>
                    
                    <RichTextBox x:Name="LeftTextBox" 
                                 Grid.Row="1"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 Padding="5"
                                 Background="White"
                                 IsReadOnly="False"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"/>
                </Grid>
            </Border>

            <!-- 分隔线 -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch"
                          Background="#E0E0E0"/>

            <!-- 右侧文档 -->
            <Border Grid.Column="2" 
                    BorderBrush="#BDBDBD" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="右侧文档" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="5"
                               Foreground="#1976D2"/>
                    
                    <RichTextBox x:Name="RightTextBox" 
                                 Grid.Row="1"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 Padding="5"
                                 Background="White"
                                 IsReadOnly="False"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

